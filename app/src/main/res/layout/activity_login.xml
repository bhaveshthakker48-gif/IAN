<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootlayout"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:background="@color/white"
    tools:context=".Activity.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="19dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/vector__5_"
                android:layout_marginTop="17dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/commeteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:visibility="visible"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:layout_toEndOf="@id/backbutton"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:src="@raw/title"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitStart"
                android:layout_marginBottom="3dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:clipToOutline="true"
        >
        <RelativeLayout
            android:id="@+id/frame2"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="70dp"
            android:layout_height="wrap_content">

            <!-- Login as BNA member text -->
            <TextView
                android:id="@+id/textLoginAsMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_as_bna"
                android:gravity="center"
                android:textAppearance="@style/login_as_bna"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="25dp"/>

            <!-- Member Number input -->
            <EditText

                android:id="@+id/editTextMemberNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_13sdp"
                android:background="@drawable/login_bg"
                android:hint="Member Number"
                android:textColor="@color/black"
                android:singleLine="true"
                android:inputType="textCapCharacters"
                android:textColorHint="#5B5B5C"
                android:textAppearance="@style/username"
                android:layout_below="@id/textLoginAsMember"
                android:layout_marginTop="39dp"
                />
            <!-- Email or Phone Number input -->
            <EditText
                android:id="@+id/editTextEmailOrPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_13sdp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:background="@drawable/login_bg"
                android:textColorHint="#5B5B5C"
                android:hint="Email or Phone Number"
                android:textAppearance="@style/email"
                android:layout_below="@id/editTextMemberNo"
                android:layout_marginTop="39dp"
                />

            <CheckBox
                android:id="@+id/keepMeLoggedInCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="10sp"
                android:checked="true"
                android:buttonTint="@color/black"
                android:layout_below="@id/editTextEmailOrPhone"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="Keep me logged in"/>

            <TextView
                android:textAlignment="center"
                android:textColor="#80FFFFFF"
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:padding="@dimen/_9sdp"
                android:id="@+id/loginButton"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@id/keepMeLoggedInCheckBox"
                android:layout_marginTop="5dp"

                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>