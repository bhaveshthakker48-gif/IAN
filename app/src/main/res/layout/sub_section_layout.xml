<?xml version="1.0" encoding="utf-8"?>
<org.bombayneurosciences.bna_2023.JournalNewFolder.ZoomLayoutNew xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/zoom_layout"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_zoom"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relay">


        <TextView
            android:id="@+id/header_sectionn"
            android:textColor="@color/black"
            android:hint=""
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="8dp"
            android:layout_marginHorizontal="10dp"
            android:lineSpacingMultiplier="1"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="16sp"
            />


        <TextView
            android:lineSpacingExtra="8dp"
            android:lineSpacingMultiplier="1"
            android:id="@+id/discripp"
            android:hint=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
            android:visibility="gone"
            android:layout_below="@+id/header_sectionn"
            android:textAlignment="viewStart"
            android:textStyle="italic"
            android:layout_marginTop="@dimen/_10sdp"
            android:justificationMode="inter_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <FrameLayout
            android:id="@+id/framlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discripp"
            android:layout_marginTop="10dp">

            <!-- WebView -->
            <WebView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@color/black"
                android:visibility="visible"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="8dp"
                android:scrollbars="none"
                tools:ignore="WebViewLayout" />

            <!-- Transparent view overlaying the WebView -->
            <View
                android:id="@+id/transparentOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"/>
        </FrameLayout>


  <!--  <WebView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_below="@+id/discripp"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:visibility="visible"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:scrollbars="none"
        android:layout_marginBottom="8dp"
        tools:ignore="WebViewLayout" />-->



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mediaRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/framlayout"
        android:layout_marginTop="10dp"/>


    </RelativeLayout>
    </LinearLayout>

</org.bombayneurosciences.bna_2023.JournalNewFolder.ZoomLayoutNew>
