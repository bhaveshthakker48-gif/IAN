<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/famLayout"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_zoom"
        android:visibility="visible"
        android:background="@color/white"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardjournal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:background="@color/white"
            app:cardElevation="9dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

            <RelativeLayout
                android:id="@+id/case_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/titel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#433737"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Case no: 1"
                    android:textStyle="bold"
                    android:gravity="left|center_vertical"
                    android:textSize="15sp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/articel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titel"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="8dp"
                    android:lineSpacingMultiplier="1"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/auther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/articel"
                    android:textAlignment="viewStart"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="8dp"
                    android:lineSpacingMultiplier="1"
                    android:textColor="#433737"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="name,Designation"
                    android:textSize="14sp"
                    android:visibility="visible"
                    />



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/desRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/auther" />



            </RelativeLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <ImageView
        android:id="@+id/pdffile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/journal"
        android:visibility="gone"/>

</RelativeLayout>