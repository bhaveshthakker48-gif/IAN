<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    app:cardCornerRadius="@dimen/_5sdp"

    android:id="@+id/MaterialCardView"
    android:layout_margin="@dimen/_3sdp"

    app:cardUseCompatPadding="false"


    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/ConstraintLayout_latest"
        android:background="@android:color/white"

        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/TextView_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="1"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_20sdp"

            app:layout_constraintStart_toEndOf="@id/TextView_index"
            app:layout_constraintTop_toTopOf="@id/TextView_index"
            android:layout_height="wrap_content">

            <TextView

               android:inputType="textMultiLine"
                android:singleLine="false"
                android:textColor="#B30013"
                android:id="@+id/TextView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:ellipsize="end"
                android:textSize="14dp"
                />
            <TextView

                android:textSize="12dp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:text="Author"
                android:id="@+id/TextView_author"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints" />

        </LinearLayout>



        <TextView
            android:layout_marginRight="@dimen/_5sdp"
            android:textColor="@color/black"
            android:id="@+id/TextView_no_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:visibility="invisible"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <!--<View
            app:layout_constraintTop_toBottomOf="@+id/TextView_author"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

