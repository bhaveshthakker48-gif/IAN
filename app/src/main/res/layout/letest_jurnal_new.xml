<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/famLayout"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_zoom"
        android:visibility="gone"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardjournal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:cardElevation="9dp">

            <RelativeLayout
                android:id="@+id/case_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/titel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#433737"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Case no: 1"
                    android:textStyle="bold"
                    android:gravity="left|center_vertical"
                    android:textSize="15sp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/articel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titel"
                    android:textColor="@color/black"
                    android:text="Title"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/auther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/articel"
                    android:gravity="left|center_vertical"
                    android:textColor="#433737"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="name,Designation"
                    android:textSize="12sp"
                    android:visibility="gone"
                    />



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/desRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@id/auther" />



            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <ImageView
        android:id="@+id/pdffile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/journal"
        android:visibility="visible"/>

</RelativeLayout>