<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/receive_cardView"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:background="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/commFromTextView"
                    android:singleLine="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="left|center_vertical"

                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commenttype"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:gravity="left|center_vertical"

                    android:textColor="@color/red1"
                    android:layout_toRightOf="@id/commFromTextView"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/createdAtTextView"
                android:layout_width="wrap_content"
                android:text="date and time "
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="left|center_vertical"

                android:textSize="12dp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:singleLine="false"
                android:textColor="@color/black"
                android:id="@+id/commentTextView"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="left|center_vertical"
                android:text="Comment"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/lineUnderCard"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7ED"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/send_cardView"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <ImageView
                android:id="@+id/commFromTextView1"
                android:layout_width="30dp"
                android:layout_height="17dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/you_lable"
                android:layout_marginEnd="5dp"
                />
            <TextView
                android:id="@+id/createdAtTextView1"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="date and time "
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textSize="12dp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:singleLine="false"
                android:textColor="@color/black"
                android:id="@+id/commentTextView1"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Comment"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/lineUnderCard1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7ED"
                />
            <TextView
                android:id="@+id/noReplyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="No reply for this comment"
                android:layout_below="@+id/commentTextView" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>




