<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_7ssp"
    android:layout_marginStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:id="@+id/cardcommette"
        android:background="@color/white"
        android:layout_width="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="7dp">
        <RelativeLayout
            android:padding="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow">
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="@dimen/_50sdp"
                android:background="@color/white"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"

                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:cardElevation="8dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:id="@+id/image_35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:background="@drawable/ketan"

                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_toRightOf="@+id/card1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dr_ketan_de"
                android:layout_toRightOf="@id/card1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:textAppearance="@style/dr_ketan_de"
                android:gravity="left|center_vertical"                />

            <TextView
                android:id="@+id/president"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="left|center_vertical"
                android:layout_marginTop="-5dp"
                android:textSize="14sp"
                android:layout_toRightOf="@id/card1"
                android:text="@string/president"
                android:textAppearance="@style/president_mob" />
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>
