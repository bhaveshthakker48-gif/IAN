<!-- custom_card_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Set your desired background color -->
            <corners
                android:topLeftRadius="9dp"
                android:topRightRadius="9dp"
                android:bottomLeftRadius="9dp"
                android:bottomRightRadius="9dp" />
        </shape>
    </item>

    <!-- Mask for the bottom-right corner -->
    <item
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Set the same color as the background -->
        </shape>
    </item>

</layer-list>
