<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.CaseOfMonthActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">



            <ImageView
                android:id="@+id/backbutton_case"
                android:layout_width="19dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/vector__5_"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/eventheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case of the Month "
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:visibility="visible"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:layout_toEndOf="@id/backbutton_case"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitStart"
                android:layout_marginBottom="3dp"/>

            <ImageView
                android:id="@+id/speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="visible"
                app:tint="@color/red"
                android:src="@drawable/volume_off"/>

            <ImageView
                android:id="@+id/speakUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="gone"
                app:tint="@color/red"
                android:src="@drawable/volume_up"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/scrollview"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_below="@id/cardview_case"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:background="@color/white"
