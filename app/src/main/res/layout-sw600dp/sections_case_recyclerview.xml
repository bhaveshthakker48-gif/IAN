<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:ignore="WebViewLayout">


    <LinearLayout
        android:id="@+id/normalheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">


        <TextView
            android:id="@+id/header_normal"
            android:textColor="@color/black"
            android:hint="Title"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="8dp"
            android:visibility="visible"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
        <TextView
            android:lineSpacingExtra="8dp"
            android:lineSpacingMultiplier="1.2"
            android:id="@+id/discrip_normal"
            android:hint="Description"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="visible"
            android:layout_below="@+id/linear_layout"
            android:textAlignment="viewStart"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@+id/normalheader"
        android:weightSum="4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header_section"
            android:textColor="@color/black"
            android:hint="Title"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:visibility="gone"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="8dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/speak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:visibility="gone"
            app:tint="@color/red"
            android:src="@drawable/volume_off"/>
        <ImageView
            android:id="@+id/speakUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            app:tint="@color/red"
            android:visibility="gone"
            android:src="@drawable/volume_up"/>
    </LinearLayout>

    <TextView
        android:lineSpacingExtra="8dp"
        android:lineSpacingMultiplier="1.2"
        android:id="@+id/discrip"
        android:hint="Description"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone"
        android:layout_below="@+id/linear_layout"
        android:textAlignment="viewStart"
        android:justificationMode="inter_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <WebView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:visibility="visible"
        android:layout_below="@id/discrip"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="WebViewLayout" />

    <WebView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_below="@id/titleTextView"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mediaRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/descriptionTextView"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
