<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EventActivity2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:id="@+id/backbutton"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginTop="5dp"
                android:src="@drawable/vector__5_"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:id="@+id/eventheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event"
                android:textColor="@android:color/black"
                android:textSize="26dp"
                android:visibility="visible"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/backbutton"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitStart"
                android:layout_marginBottom="3dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RadioGroup
        android:visibility="gone"
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="5dp"
        android:elevation="@dimen/_10sdp"
        android:layout_below="@id/cardview"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/event_background"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:visibility="gone"
            android:id="@+id/day1"
            android:text="Day 1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/radio_flat_selector"
            android:button="@android:color/transparent"

            android:textColor="#575151"
            android:checked="true" />

        <RadioButton
            android:visibility="gone"
            android:id="@+id/day2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Day 2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/radio_flat_selector"
            android:button="@android:color/transparent"

            android:textColor="#575151" />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/day3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/radio_flat_selector"
            android:button="@android:color/transparent"
            android:text="Day 3"

            android:textColor="#575151"            />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/day4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/radio_flat_selector"
            android:button="@android:color/transparent"
            android:text="Day 4"

            android:textColor="#575151"            />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/day5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/radio_flat_selector"
            android:button="@android:color/transparent"
            android:text="Day 5"

            android:textColor="#575151"            />
        <RadioButton
            android:id="@+id/day6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/radio_flat_selector"
            android:button="@android:color/transparent"
            android:text="Day 6"
            android:visibility="gone"

            android:textColor="#575151"            />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/day7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/radio_flat_selector"
            android:button="@android:color/transparent"
            android:text="Day 7"

            android:textColor="#575151"            />


    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_session"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/radio_group"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_marginBottom="10dp"/>
   <!-- <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_topic"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/radio_group"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>-->

    <!-- No Data Available TextView -->
    <TextView
        android:id="@+id/no_data_text_view_activity_event2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerview_session"
        android:layout_marginTop="80dp"

        android:text="No Data Available"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/refreshbutton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/refreshbtn"
        android:clipToOutline="true"
        android:onClick="onRefreshButtonClick"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        tools:ignore="OnClick" />
</RelativeLayout>