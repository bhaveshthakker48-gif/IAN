<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.CaseOfMonthActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">




            <ImageView
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/backbutton_case"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginTop="5dp"
                android:src="@drawable/vector__5_"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:id="@+id/commeteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case of the Month"
                android:textColor="@android:color/black"
                android:textSize="26dp"
                android:visibility="visible"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:layout_toEndOf="@id/backbutton_case"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"/>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:src="@raw/title"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitStart"
                android:layout_marginBottom="3dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/cardview"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/button_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/current_radio_button"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@drawable/radio_flat_selector"
            android:button="@android:color/transparent"
            android:text="Current"
            android:textColor="@color/radio_flat_text_selector"
            android:checked="true" />

        <RadioButton
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/archive_radio_button"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@drawable/radio_flat_selected1"
            android:button="@android:color/transparent"
            android:text="Archive"
            android:textColor="@color/radio_flat_text_selector" />
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_case"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/radio_group"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/no_data_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No Data Available"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/refreshbutton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/refreshbtn"
        android:clipToOutline="true"
        android:onClick="onRefreshButtonClick"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        tools:ignore="OnClick" />
    <ProgressBar
        android:id="@+id/progressBar_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/red"
        android:layout_centerInParent="true"/>
</RelativeLayout>

