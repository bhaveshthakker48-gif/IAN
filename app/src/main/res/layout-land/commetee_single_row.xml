<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@color/white"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardcommette"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="9dp">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/shadow">
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="@dimen/_50sdp"
                android:background="@color/white"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:cardElevation="8dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:id="@+id/image_35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:background="@drawable/ketan"

                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dr_ketan_de"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/card1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:textAppearance="@style/dr_ketan_de"
                android:gravity="center_horizontal|top"
                />

            <TextView
                android:id="@+id/president"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="13sp"
                android:layout_marginBottom="5dp"

                android:layout_toRightOf="@id/card1"
                android:gravity="center_horizontal|top"
                android:text="@string/president"
                android:textAppearance="@style/president_mob" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>
