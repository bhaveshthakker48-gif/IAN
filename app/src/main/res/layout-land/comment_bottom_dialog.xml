<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

<!--    &lt;!&ndash; CoordinatorLayout with layout_above attribute &ndash;&gt;-->
<!--    <androidx.coordinatorlayout.widget.CoordinatorLayout-->
<!--        android:id="@+id/coordinatorLayout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--&gt;-->

        <!-- Your Bottom Sheet Layout -->
        <RelativeLayout
            android:id="@+id/bottomSheetLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:background="@android:color/white"
            android:elevation="8dp">

            <!-- Arrow ImageView -->
            <ImageView
                android:id="@+id/arrowImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/arrow_circle_right_light"/>

            <!-- Comments TextView -->
            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Comments"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/arrowImageView"
                android:textSize="17dp"
                android:textColor="@android:color/black"/>

            <!-- RecyclerView for chats -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewChats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:layout_below="@id/comments"
                android:padding="16dp"
                android:background="@android:color/white"
                tools:ignore="MissingClass" />




    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:orientation="horizontal">
        <!-- EditText for typing messages -->
        <EditText
            android:id="@+id/editTextChats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textSize="13dp"

            android:hint="Enter your text here ..."
            android:textColor="@color/black"
            android:visibility="visible"
            android:textColorHint="#685F5F"
            android:layout_weight="1"
            android:background="@drawable/edittext_chats"
            tools:ignore="NotSibling" />

        <!-- Send button -->
        <ImageView
            android:id="@+id/speechMic"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/editTextChats"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            android:src="@drawable/mic_none_24"
            app:tint="#B30013"
            android:layout_weight="3"
            android:text="Send"
            android:textColor="@android:color/white"
            android:textSize="16dp" />


            <ImageView
                android:id="@+id/sendButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/editTextChats"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                app:tint="#B30013"
                android:layout_weight="3"
                android:src="@drawable/outline_near_me_24"
                android:text="Send"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

        </LinearLayout>
    </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>
