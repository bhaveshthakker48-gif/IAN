<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <RelativeLayout

        android:visibility="gone"
        android:id="@+id/shadow"
        android:background="@drawable/event_background"
        android:padding="2dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_marginLeft="2dp"

            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"

            >

            <TextView
                android:id="@+id/eventmeeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:background="@drawable/textview_background"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Annually Meeting "
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>

<RelativeLayout
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="2dp"
    android:layout_below="@id/relative_layout"
android:background="@drawable/layout_bottom_design"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/eventdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Event start date - end date "
        android:fontFamily="@font/poppins_medium"
        android:textColor="#6A6565"
        android:textSize="13sp"
        android:gravity="left|center_vertical"
        />

    <TextView
        android:id="@+id/eventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="30dp"
        android:text="Event Name"
        android:layout_below="@id/eventdate"
        android:textStyle="bold"
        android:gravity="left|center_vertical"
        android:singleLine="false"
        android:fontFamily="@font/poppins"
        android:textColor="#323336"
        android:textSize="14sp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@id/eventname"
        android:layout_marginStart="20dp"
        app:cardBackgroundColor="#F8F9FC"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/eventvenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:text="Venue : name  "
            android:fontFamily="@font/poppins_medium"
            android:layout_below="@id/eventname"
            android:textColor="@color/red1"
            android:textSize="13sp"
            android:gravity="left|center_vertical"
            />
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/arrowcircle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ph_arrow_circle_right_light__1_" />

</RelativeLayout>



    </RelativeLayout>

    <ImageView
        android:id="@+id/property_image"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        android:src="@drawable/property_1_variant2" />
    <ImageView
        android:id="@+id/property_imag"
        android:layout_width="24dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/dot_style_active"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/property_image1"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/property_1_variant2" />

