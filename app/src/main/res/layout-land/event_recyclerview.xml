            <RelativeLayout
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/layout_bottom_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/eventmeeting1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="Quarterly Meeting "
                    android:textColor="#B30013"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/lineUnderCard"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/eventmeeting1"
                    android:layout_marginTop="3dp"
                    android:background="#B30013" />


            <TextView
                android:id="@+id/eventdate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineUnderCard"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="left|center_vertical"
                android:text="Event start date - end date "
                android:textColor="#6A6565"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/eventname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventdate1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/poppins"
                android:gravity="left|center_vertical"
                android:singleLine="false"
                android:text="Event Name"
                android:textColor="#323336"
                android:textSize="14sp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventname1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                app:cardBackgroundColor="#F8F9FC"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/eventvenue1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eventname"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="left|center_vertical"
                    android:text="Venue : name  "
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>


            <ImageView
                android:id="@+id/arrowcircle1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/lineUnderCard"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ph_arrow_circle_right_light__1_" />


        </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/property_imag2"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/property_1_variant2"
            android:visibility="gone" />
    <ImageView
        android:id="@+id/property_imag3"
        android:layout_width="24dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/dot_style_active"
        android:visibility="gone" />

        <ImageView
            android:id="@+id/property_image2"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/event_circle_varient"
            android:visibility="visible" />

